<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/apintment_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main"
    tools:context=".Activities.Appointment">


    <include
        layout="@layout/container_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="120dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/your_appointment_to_submit_the_payment_receipt"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <TableRow
                android:layout_width="352dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/day"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#c5c5c5" />
                <View
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />


                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:gravity="center"
                    android:background="#c5c5c5" />
                <View
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/time"
                    android:background="#c5c5c5" />

            </TableRow>

            <View
                android:layout_width="352dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/black" />

            <TableRow
                android:layout_width="352dp"
                android:layout_gravity="center"
                android:layout_height="55dp"
                >


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="الاثنين"
                    android:gravity="center"
                    android:background="#c5c5c5" />
                <View
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />


                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="19 October 2020"
                    android:gravity="center"
                    android:background="#c5c5c5" />
                <View
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1:12 PM"
                    android:background="#c5c5c5" />

            </TableRow>


        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"/>

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deny"/>


        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="200dp"/>

        <include
            layout="@layout/footer"/>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/appointment_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"
        android:fitsSystemWindows="true">


    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
