<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical"
    tools:context=".Activities.Fine_payment_alert">

    <include
        layout="@layout/toolbar_std"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="20sp"/>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/number_of_times_card_was_forgetten" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50sp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted_border"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="120sp"
            android:text="4" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:text="@string/you_have_to_pay_a_fine" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/request_an_appointment"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="@string/payment_info"
                />



        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="@string/ok" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="95sp"/>

        <include
            layout="@layout/footer"/>

    </LinearLayout>





</LinearLayout>

