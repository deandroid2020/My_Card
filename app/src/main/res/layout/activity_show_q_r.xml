<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ShowQR_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main"
    tools:context=".Activities.ShowQR">


    <include layout="@layout/container_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>


    <ImageView
        android:id="@+id/GeneQR"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginTop="100dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/align_the_qr_code_within_to_scan"
        android:textColor="@color/black"
        android:layout_gravity="center"/>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="140dp"/>


    <include
        layout="@layout/footer"/>

</LinearLayout>


<com.google.android.material.navigation.NavigationView
android:id="@+id/ShowQR_navigation_view"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="start"
app:menu="@menu/main_menu"
android:fitsSystemWindows="true">


</com.google.android.material.navigation.NavigationView>


    </androidx.drawerlayout.widget.DrawerLayout>
